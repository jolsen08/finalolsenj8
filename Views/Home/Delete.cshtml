@{
    ViewData["Title"] = "Delete Record";
}

@model Entertainer

<h2> Confirm Deletion </h2>
<h3> Are you sure you want to delete the record for @Model.EntStageName?</h3>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="EntertainerId" name="id">
    <button type="submit"> Delete </button>
    <a asp-controller="Home" asp-action="Entertainers"> Cancel </a>
</form>
